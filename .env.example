# ═══════════════════════════════════════════════════════════════════
# MCS Environment Configuration
# Copy to .env and edit for your deployment
# ═══════════════════════════════════════════════════════════════════

# ── Database ─────────────────────────────────────────────────────
POSTGRES_USER=mcs_admin
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=mcs
DB_HOST=timescaledb
DB_PORT=5432

# ── Redis ────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379

# ── MQTT ─────────────────────────────────────────────────────────
MQTT_HOST=mosquitto
MQTT_PORT=1883

# ── API ──────────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_LOG_LEVEL=info

# ── JWT Auth ─────────────────────────────────────────────────────
JWT_SECRET=changeme_generate_a_real_secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# ── Dashboard ────────────────────────────────────────────────────
VITE_MCS_API_URL=http://localhost:8000/api/v1
VITE_MCS_WS_URL=ws://localhost:8000/api/v1
